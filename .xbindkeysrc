# Increase volume
"amixer set Master 5%+ && pkill -RTMIN+10 i3blocks "
    Shift+Alt + bracketright
"amixer set Master 5%+ && pkill -RTMIN+10 i3blocks "
    XF86AudioRaiseVolume

# Decrease volume
"amixer set Master 5%- && pkill -RTMIN+10 i3blocks"
    Shift+Alt + bracketleft
"amixer set Master 5%- && pkill -RTMIN+10 i3blocks"
    XF86AudioLowerVolume

# Mute volume
"amixer set Master toggle && pkill -RTMIN+10 i3blocks"
    Shift+Alt + backslash
"amixer set Master toggle && pkill -RTMIN+10 i3blocks"
    XF86AudioMute

"playerctl play-pause"
    Shift+Alt + Return
"playerctl play-pause"
    XF86AudioPlay

"playerctl next"
    Shift+Alt + period
"playerctl next"
    XF86AudioNext

"playerctl previous"
    Shift+Alt + comma
"playerctl previous"
    XF86AudioPrev

"xbacklight -inc 10"
    XF86MonBrightnessUp

"xbacklight -dec 10"
    XF86MonBrightnessDown

"kbdlight down"
    m:0x0 + c:237
    XF86KbdBrightnessUp

"kbdlight up"
    m:0x0 + c:238
    XF86KbdBrightnessDown

