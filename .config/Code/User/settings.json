{
    "window.zoomLevel": 1,
    "window.menuBarVisibility": "hidden",
    "workbench.colorTheme": "Gruvbox Dark Soft",
    "editor.fontFamily": "Hack Nerd Font",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": false,
    "editor.tabCompletion": true,

    "settings.cycle": [{
        "id": "toggleMenu", // must be unique
        "values": [
            { "window.menuBarVisibility":"default" },
            { "window.menuBarVisibility":"hidden" },
        ]
    }],
    
    //git
    "gitlens.gitExplorer.view": "history",
    "gitlens.gitExplorer.enabled": true,
    "gitlens.resultsExplorer.files.layout": "tree",
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,

    //language specific
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "python.pythonPath":"/usr/local/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,

    "git.autofetch": true,
    // Vim settings
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["leader", "w"],
            "commands": [
                { "command": "workbench.action.files.save"}
            ]
        }, {
            "before": ["leader", "q"],
            "commands": [
                { "command": "workbench.action.closeActiveEditor"},
            ]
        }, {
            "before": ["leader", "c", "<space>"],
            "commands": [
                { "command": "editor.action.commentLine"}
            ]
        }, {
            "before": ["leader", "l"],
            "commands": [
                { "command": "workbench.action.focusNextGroup"}
            ]
        }, {
            "before": ["leader", "h"],
            "commands": [
                { "command": "workbench.action.focusPreviousGroup" }
            ]
        // }, {
        //     "before": ["leader", "H"],
        //     "commands": [
        //         { "command": "workbench.action.moveActiveEditorGroupLeft" }
        //     ],
        // }, {
        //     "before": ["leader", "L"],
        //     "commands": [
        //         { "command": "workbench.action.moveActiveEditorGroupRight" }
        //     ],
        }, {
            "before": ["leader", "2"],
            "commands": [
                { "command": "workbench.view.explorer" }
            ],
        }, {
            "before": ["\\"],
            "commands": [
                { "command": "workbench.action.findInFiles" }
            ],
        }, {
            "before": ["leader", "g", "s"],
            "commands": [
                { "command": "workbench.view.scm" }
            ],
        }, {
            "before": ["leader", "g", "s"],
            "commands": [
                { "command": "workbench.view.scm" }
            ],
        }, {
            "before": ["leader", "L"],
            "commands": [
                { "command": "workbench.action.nextEditor" }
            ]
        }, {
            "before": ["leader", "H"],
            "commands": [
                { "command": "workbench.action.previousEditor" }
            ],
        }, {
            "before": ["leader", "m"],
            "commands": [
                { "command": "workbench.action.openPreviousEditorFromHistory" }
            ],
        }, {
            "before": ["leader", "d"],
            "commands": [
                { "command": "workbench.view.debug" }
            ],
        }, {
            "before": ["leader", "x"],
            "commands": [
                { "command": "workbench.view.extensions" }
            ],
        }, {
            "before": ["leader", "v"],
            "commands": [
                { "command": "workbench.action.openGlobalSettings" }
            ],
        }, {
            "before": ["g", "r"],
            "commands": [
                { "command": "editor.action.referenceSearch.trigger" }
            ],
        }, {
            "before": ["leader", "z"],
            "commands": [
                { "command": "workbench.action.toggleZenMode" }
            ],
        }, {
            "before": ["leader", "p"],
            "commands": [
                { "command": "projectManager.listProjects" }
            ],
        //project
        }, {
            "before": ["-"],
            "commands": [
                { "command": "extension.toggleBool" }
            ],

        // git commands
        }, {
            "before": ["leader", "g", "p"],
            "commands": [
                { "command": "git.push" }
            ],
        }, {
            "before": ["leader", "g", "a"],
            "commands": [
                { "command": "git.stageAll" }
            ],
        }, {
            "before": ["leader", "g", "b"],
            "commands": [
                { "command": "gitlens.showLineBlame" }
            ],
        }, {
            "before": ["leader", "g", "f"],
            "commands": [
                { "command": "gitlens.showQuickFileHistory" }
            ],
        }, {
            "before": ["leader", "g", "v"],
            "commands": [
                { "command": "gitlens.showQuickRepoHistory" }
            ],
        }, {
            "before": ["leader", "g", "l"],
            "commands": [
                { "command": "gitlens.toggleCodeLens" }
            ],
        },
    ],
    "editor.fontLigatures": null,
    "yaml.schemas": {
        "file:///home/calvinc/.vscode/extensions/atlassian.atlascode-2.6.6/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
}